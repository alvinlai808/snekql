{
    "env": {
        "browser": true,
        "commonjs": true,
        "jest": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": ["assets/"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-constant-condition": "off"
    }
}
